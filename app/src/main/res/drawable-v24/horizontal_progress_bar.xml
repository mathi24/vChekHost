<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#00CA24"
                android:centerColor="#00CA24"
                android:centerY="0.50"
                android:endColor="#00CA24"
                android:angle="270" />
            <corners
                android:radius="5dip" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip android:clipOrientation="vertical"
            android:gravity="top">
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient

                android:startColor="#FB0066"
                android:endColor="#FB0066"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>
