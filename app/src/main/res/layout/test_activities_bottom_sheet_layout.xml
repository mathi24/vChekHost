<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#292929"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/margin_2dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="#E5E5E5" />

        <EditText
            android:id="@+id/et_vin_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:inputType="textFilter|textNoSuggestions|textCapCharacters"
            android:maxLength="18"
            android:maxLines="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:hint="Vin"
            android:padding="@dimen/margin_15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:backgroundTint="@android:color/white" />

        <EditText
            android:id="@+id/et_access_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:hint="Accesory Code"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789- "
            android:maxLines="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:padding="@dimen/margin_15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:backgroundTint="@android:color/white" />

        <EditText
            android:id="@+id/et_accessory_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:hint="Accessory Description"
            android:padding="@dimen/margin_15dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789- "
            android:maxLines="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:backgroundTint="@android:color/white" />

        <Button
            android:id="@+id/btn_test"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#0008C7"
            android:drawableRight="@drawable/test_chevronright_icon"
            android:padding="10dp"
            android:text="Test"
            android:textColor="@color/white"
            app:cornerRadius="25dp" />
    </LinearLayout>
</ScrollView>